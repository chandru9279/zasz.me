@{
    ViewBag.Title = "All";
}

@section Head
{
<style type="text/css">
    
    .Tile
    {
        width: 288px;
        height: 280px;
        margin : 30px;
        float: left;
        -moz-box-shadow: 6px 6px 6px #FFAE7F; /* Firefox */
        -webkit-box-shadow: 6px 6px 6px #FFAE7F; /* Safari, Chrome */
        box-shadow: 6px 6px 6px #FFAE7F; /* CSS3 */
        
    }
    
    .Tile-Title
    {
        background-color: #7A0000;
        color: #FFFFFF;
        font-size: 20px;
        margin: 0;
        padding: 9px 14px 7px;
        height : 30px;
    } 
    
    .Tile-Content
    {
        color: #FFFFFF;
        height: 218px;
        font-size: 20px;
        margin: 0;
        padding: 9px 14px 7px;
        background-color: #FFEBE0;
    }
    
    .Tile-Content:hover
    {        
        background-color: #FFBABA;
    }
    
    .Slab
    {
        width: 173px;
        height: 291px;
        margin : 30px;
        float: left;
        -moz-box-shadow: 6px 6px 6px #FFAE7F; /* Firefox */
        -webkit-box-shadow: 6px 6px 6px #FFAE7F; /* Safari, Chrome */
        box-shadow: 6px 6px 6px #FFAE7F; /* CSS3 */
        
    }
    
    .Slab-Title, .Slab-Footer
    {
        background-color: #7A0000;
        color: #FFFFFF;
        font-size: 20px;
        margin: 0;
        padding: 9px 14px 7px;
        height : 30px;
    }  
    
    .Slab-Content
    {
        color: #FFFFFF;
        height: 183px;
        font-size: 20px;
        margin: 0;
        padding: 9px 14px 7px;
        background-color: #FFEBE0;
    }
    
    .Slab-Content:hover
    {        
        background-color: #FFBABA;
    }
</style>
}

@for(int i=0; i<=5; i++)
{
<div class="Tile">
<div class="Tile-Title"></div>
<div class="Tile-Content"></div>
</div>
}


@for(int i=0; i<=5; i++)
{
<div class="Slab">
<div class="Slab-Title"></div>
<div class="Slab-Content"></div>
<div class="Slab-Footer"></div>
</div>
}