@using zasz.me.Areas.Shared.Controllers.Utils 
@model zasz.me.Areas.Shared.Models.Post

@{
    ViewBag.Title = "Post";
}


@*      --= Pro Area =--      *@
    

                                                                                             
@section Head{
    @Html.Partial("~/Areas/Shared/Views/Post/_SyntaxHighlight.cshtml")
    <script type="text/javascript">

    </script>
}

@section Right{
    @Html.Action("TagCloudControl")
    <a class="Normal-Link Modal" href="#TagCloud">More</a>
    <div class="Sidebar-Control">
    <div class="Sidebar-Title">QR - Code</div>
    @Html.QrCode(Model.Permalink, Size: 214)
    </div>
    <a class="Normal-Link Modal" href="#WhatsQRCode">What's this?</a>
    @Html.Action("ArchiveControl")
    
}


@Html.Partial("~/Areas/Pro/Views/Writings/_PostFullView.cshtml", (object)Model)

<div class="Clear"></div>
@*This div will be filled by the Disqus script in _DisqusComments.cshtml*@
<div style="margin:20px;" id="disqus_thread">
<noscript>
    Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a>
</noscript>
</div>

<div id='WhatsQRCode' style="display: none; width: 400px" class="Pro-Popup">	
    <h1 class="Sidebar-Title" style="text-align:center;">View this content from your Mobile Device</h1>
	<p>The image is a <a class="Normal-Link" target="_blank" href="http://en.wikipedia.org/wiki/QR_code">QR-Code.</a> 
    Just open the QR scanner/reader App on your device and hold it against the code, and if connected 
    to the internet, it will start displaying this content. You can complete reading the article on the go.</p>
	<img style="margin: 10px auto; display:block;" src="@Url.Content("~/Content/Pro/Images/scan-qr-codes.jpg")" alt="Scan QR Codes" />
    <p>Download the reader app if don't have one. Use 
    <a class="Normal-Link" target="_blank" href="http://www.androlib.com/android.application.tw-com-quickmark-jwCAt.aspx">QuickMark</a> or 
    <a class="Normal-Link" target="_blank" href="http://www.androlib.com/android.application.com-google-zxing-client-android-xzA.aspx">Barcode Scanner</a> for Android, and
    <a class="Normal-Link" target="_blank" href="http://itunes.apple.com/us/app/neoreader/id284973754?mt=8">NeoReader</a> or 
    <a class="Normal-Link" target="_blank" href="http://itunes.apple.com/us/app/barcode/id285683111?mt=8">BarcodeReader</a> for iPhone, iPod Touch, iPad, and 
    <a class="Normal-Link" target="_blank" href="http://appworld.blackberry.com/webstore/content/1102">ScanLife</a> or 
    <a class="Normal-Link" target="_blank" href="http://appworld.blackberry.com/webstore/content/5781?lang=en">BeeTag</a> for Blackberry and
    <a class="Normal-Link" target="_blank" href="http://get.neoreader.com/">NeoReader</a> or
    <a class="Normal-Link" target="_blank" href="http://get.beetagg.com">BeeTag</a> for Windows Phone 7.</p>
</div>


<div id='TagCloud' style="display: none; width: 400px" class="Pro-Popup">	
    <h1 class="Sidebar-Title" style="text-align:center;">Disorganizer&trade; Tag Cloud by &copy;Chandru</h1>
	<p>The Disorganizer&trade; Tag Cloud is inspired by <a class="Normal-Link" target="_blank" href="http://www.wordle.net/">Wordle</a> and 
    <a class="Normal-Link" target="_blank" href="http://www.tagcloud.com/">TagCloud</a>.</p> 
    <br />
    <p>Both of those sites do not give you an on-the-fly
    cloud generation functionality which can be put into a blog, or a profile. Nor do they allow you to click on the tags and show hover animation on the tags,
     so I wrote this one using tools and classes in the .net 
    System.Drawing namespace.</p> 
    <br />
    <p>Go <a class="Normal-Link" href="/Disorganizer/Tinker" target="_blank">here</a> to see what features you have with this utility.
    Hit F5 key or Refresh button on the browser to see a new Cloud :)
    </p>
    <br />
    <p>Thanks to <a class="Normal-Link" href="http://www.cooltext.com/">Cooltext</a> for the nice fonts, and to <a class="Normal-Link" href="http://www.stackoverflow.com/">StackOverflow</a>
     community for the invaluable answers.</p> 
</div>

@section Bottom{
    @Html.Partial("~/Areas/Shared/Views/Post/_DisqusComments.cshtml", (object)Model)
}


