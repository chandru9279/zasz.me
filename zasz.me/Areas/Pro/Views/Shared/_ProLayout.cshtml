<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/ForHtmlHelpers.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/BlueprintReset.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>    
    <meta name="robots" content="noindex, nofollow" />
    <link type="image/png" href="@Url.Content("~/Content/favicon.png")" rel="shortcut icon" />
    @RenderSection("Head", false)
    <style type="text/css">
        
        div
        {
            overflow: hidden;
        }
        
        .Pro
        {
            background-image: url('../../../../Content/Pro/bgpuzzle.png');
            background-repeat: repeat;
            background-position: center top;
            width: 100%;
            color: #FF5400;
            font-family: Terminal;
        }
        
        .Site-In-Center
        {
            display:block;            
            width: 960px;
            margin: 40px auto;
        }
        
        .Clear
        {
            clear: both;
        }
        
        .Elevated-Right-Shadow
        {
            background-image:url('../../../../Content/Pro/shadow-right.png');
            background-repeat:repeat-y;
            background-position:right;
            width: 960px;
            float: left;
        }
        
        .Elevated
        {
            border: 2px solid #FFAE7F;
            border-bottom-width: 0px;
            min-height : 1500px;
            background-color: #FFFFFF;
            width: 936px;
            float: left;
        }
        
        .Elevated-Top-Shadow
        {
            background-image:url('../../../../Content/Pro/shadow-top.png');
            background-repeat:repeat-x;
            height: 20px;
            width: 925px;
            float: left;
        }
        
         
        .Elevated-TopRight-Shadow
        {
            background-image:url('../../../../Content/Pro/shadow-topright.png');
            background-repeat:no-repeat;
            height: 20px;
            width: 20px;
            float: left;
        }
        
        .Elevated-TopLeft-Padding
        {
            width: 15px;
            height: 20px;
            background: none;
            float: left;
        }
          
        .Header
        {
            width: 100%;
            height : 300px;
            font-family: Bookman Old Style;
            font-size: 30px;
            display: block;
            float: left;
        }
        
        .Header-Left
        {
            width: 700px;
            display: block;
            float:left;
        }
        
        .Header-Right
        {
            width: 234px;
            background-color: #FFEBE0;
            border-left: 2px solid #FFAE7F;
            padding-top: 55px;
            height: 300px;
            display: block;
            float:left;
        }
        
        .Sub-Header
        {
            color: #FFFFFF;
            font-family: Bookman Old Style;
            font-size: 25px;
        }
            
        .Site-Name
        {
            font-size:62px;
            margin-left:75px;
            margin-top:30px;
            margin-bottom:10px;
        }    
        
        .Site-Sub
        {
            font-size:25px;
            margin-left:150px;
            width: 350px;
            font-style:oblique;
            text-align: center;
        }
        
        .Main-Menu
        {
            width: 640px;
            margin-left: 30px;
            margin-right: 30px;
            margin-top:10px;   
        }
        
        .Main-Menu-Item
        {
            text-align: center;
            font-size: 22px;
            display: inline-block;
            width: 120px;
        }
        
        .Pro-Body
        {
            width: 921px;
            background-color: #FFFFFF;
        }
        
        .Status-History
        {
            height: 54px;
        }
        
        .Focus-Description
        {
            color: #FF5400;
            font-size: 24px;
        }
        
        .Description
        {
            color: #333333;
            text-align: center;
            font-size: 12px;
            margin-bottom: 20px;
        }
        
        .Bottom-Shadowless
        {
            width: 936px;
            border: 2px solid #FFAE7F;
            border-top-width: 0px;
            height : 15px;
            background-color: #FFFFFF;
            float: left;
        }
    </style>

</head>

<body class="Pro">

    <div class="Site-In-Center">
    
        <div class="Elevated-TopLeft-Padding"></div>
        <div class="Elevated-Top-Shadow"></div>
        <div class="Elevated-TopRight-Shadow"></div>
        <div class="Clear"></div>

        <div class="Elevated-Right-Shadow">
            <div class="Elevated">
                <div class="Header">
                        <div class="Header-Left">
                            <div class="Site-Name">ChandruOn.NET</div>  
                            <div class="Site-Sub">My name is T Chandirasekar I share my thoughts here</div>  
                            <ul class="Main-Menu">
                                <li class="Main-Menu-Item">Home</li>
                                <li class="Main-Menu-Item">Writings</li>
                                <li class="Main-Menu-Item">Portfolio</li>
                                <li class="Main-Menu-Item">About</li>
                                <li class="Main-Menu-Item">Contact</li>
                            </ul>
                        </div>
                        <div class="Header-Right">
                            <div class="Description">I'm a <div class="Focus-Description">Consultant</div></div>
                            <div class="Description">I often play <div class="Focus-Description">Developer</div></div>
                            <div class="Description">
                                <ul class="Status-History">
                                    <li>I work at <div class="Focus-Description">ThoughtWorks</div></li>
                                    <li>I graduated an Engineer at <div class="Focus-Description">Anna University</div></li>
                                    <li>I hung around <div class="Focus-Description">Aveo Infotech</div></li>
                                    <li>I live in <div class="Focus-Description">Chennai</div></li>
                                </ul>
                            </div>
                        </div>                        
                </div>
                <div class="Pro-Body">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="Clear"></div>

        <div class="Bottom-Shadowless"></div>
    </div>
</body>
</html>


