<body class="Pro">

    <div class="Site-In-Center">
    
        <div class="Elevated-TopLeft-Padding"></div>
        <div class="Elevated-Top-Shadow"></div>
        <div class="Elevated-TopRight-Shadow"></div>
        <div class="Clear"></div>

        <div class="Elevated-Right-Shadow">
            <div class="Elevated">
                <div class="Header">
