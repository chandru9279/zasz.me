@model zasz.me.Areas.Shared.Models.Post
           
<div class="post">

<h1><a class="Normal-Link" href="/Writings/Post/@Model.Slug">@Model.Title</a></h1>
<div class="post_body"><p>@Model.GetDescription(ViewBag.DescriptionLength)  &nbsp;&nbsp; <a class="Normal-Link" href="/Writings/Post/@Model.Slug">Read the full entry</a></p>

<span>Tagged : </span>
<ul class="Tags">
@foreach (zasz.me.Areas.Shared.Models.Tag Tag in Model.Tags)
{
    <li><a class="Normal-Link" href="/Writings/Tag/@Tag.Name">@Tag.Name</a></li>
}
</ul>
<br />
<a href="@Model.Permalink" class="Normal-Link">Permalink</a>
<br />
<span>Manage :</span>
<a href="/Writings/Edit/@Model.Slug" class="Normal-Link">Edit</a>
<a href="/Writings/Delete/@Model.Slug" class="Normal-Link">Delete</a>
<br />
</div>
<div class="postedby">Posted by Zasz <a class="Normal-Link" href="/Writings/Post/@Model.Slug#disqus_thread" data-disqus-identifier="@Model.Slug">Comments And Reactions</a> </div>

<div class="timestamp">@Model.Timestamp.ToString("f")</div>

</div>



