<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Rest/DiabloBlue/DiabloBlue.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="ev_bg">
        <div id="everything">
            <div id="header">
                <h1>Diablo III Fansite</h1>
            </div>
            <div id="middle">
                <div id="left_column">
                    <div id="navigation">
                        @Html.Partial("~/Areas/Rest/Views/Shared/Menu.cshtml")
                    </div>                    
