                    <div id="more_information">
                        <div class="box">
                            Poll:</div>
                        <div class="box">
                            Features:</div>
                        <div class="box">
                            Links:</div>
                    </div>
                </div>
                <div id="middle_column" class="two_column">
                    @RenderBody()
                </div>
                
            </div>
            <div id="footer">
