@model zasz.me.ViewModels.ContactViewModel

@{
    ViewBag.Title = "Form";
    var boxAttribs = new {@class = "TextBox"};
    var areaAttribs = new {@class = "TextArea", rows = 10};
}

@section Head
{
    <script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"> </script>
}

<br />
@using (Html.BeginForm("Mail", "Contact"))
{
    <div>        
        <div style="float: right;">
            <p>
                @Html.LabelFor(x => x.Name)
                @Html.ValidationMessageFor(x => x.Name)<br />
                @Html.TextBoxFor(x => x.Name, boxAttribs)<br />
            </p>
    
            <p>
                @Html.LabelFor(x => x.Email)
                @Html.ValidationMessageFor(x => x.Email)<br />
                @Html.TextBoxFor(x => x.Email, boxAttribs)<br />
            </p>

            <p>
                @Html.LabelFor(x => x.Website)
                @Html.ValidationMessageFor(x => x.Website)<br />
                @Html.TextBoxFor(x => x.Website, boxAttribs)
                <br />
            </p>
        </div>

        <div style="float: left; margin-top:20px;">
            <p style="font-size: 28px">making contact</p>
            <p>You can reach me by submiting this form. Or by skype, or by gmail.</p>
        </div>        
            

        <div style="clear: both;">
            <p>
                @Html.LabelFor(x => x.Message)
                @Html.ValidationMessageFor(x => x.Message)<br /><br />
                @Html.TextAreaFor(x => x.Message, areaAttribs)<br />
                @Html.Partial("_MessageEditor")<br />
            </p>
        </div>        
                
    </div>
    
    <input type="submit" class="Button" value="Send Mail" style="float: right; font-size: 22px;"/>
}