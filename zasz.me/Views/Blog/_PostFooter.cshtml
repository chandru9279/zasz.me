@model zasz.me.Models.Post

<div class="Post-Footer">
    @if (Model.Tags.Count == 0)
    {
        <span>No tags!</span>
    }
    else
    {
        <span>Tagged </span>
        <ul class="Tags">
            @foreach (var tag in Model.Tags)
            {
                <li><a href="/Blog/Tag/@tag.Name">@tag.Name</a></li>
            }
        </ul>
    }
    &nbsp;|&nbsp; <a href="@Model.Permalink">Permalink</a>
    &nbsp;|&nbsp; <a href="/Blog/Post/@Model.Slug#disqus_thread" data-disqus-identifier="@Model.Slug">Comments and Reactions</a>
    <table style="margin-top: 5px;">
        <tr>
            <td><div class="fb-like" data-href="@Model.Permalink" data-layout="button_count" data-send="true" data-width="290" data-show-faces="true" data-colorscheme="dark" data-font="trebuchet ms"></div></td>
            <td><div style="margin-left: 20px"><a href="https://twitter.com/share" class="twitter-share-button" data-url="@Model.Permalink" data-text="Chandru posted : @Model.Title">Tweet</a></div></td> 
            @if (Request.IsAuthenticated)
            {
                <td>
                    <span>Manage :</span>
                    <a href="@Url.Action("Delete", "Blog")/@Model.Slug">Hide</a>
                </td>
            }            
        </tr>
    </table>
    
</div>