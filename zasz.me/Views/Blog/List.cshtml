@model zasz.me.ViewModels.PostListViewModel
@{
    ViewBag.Title = "Posts";
    ViewBag.DescriptionLength = Model.DescriptionLength;
}

@section Head{
    @Html.Partial("_SyntaxHighlight")
}

@section Right{
    @Html.Partial("TagCloudControl")
    @Html.Action("ArchiveControl", "Blog")
}

<div class="Clear"></div>
@foreach (var post in Model.Set)
{
    @Html.Partial("_PostShortView", post)
}

<label class="Prominant">@Html.Raw(Model.WhatIsListed)</label>
@Render.Paging(Model.NumberOfPages)

@section Bottom{
    @Html.Partial("_DisqusCommentCount")
}