@model zasz.me.Models.Paged<zasz.me.Models.Answer>

@{
    ViewBag.Title = "StackTacks";
}

@section Head
{
    <script type="text/javascript" >
        $(function () {
            $('#Threads li a').click(function () {
                var id = $(this).data("id");
                $('#Tacks').empty();
                $('#Tacks').html("<iframe height='1500px' width='100%' style='height:1500px; width:100%; overflow:visible' src='@Url.Action("Tack")?id=" + id + "'><div id='stacktack-></div></iframe>");
            });
        });
    </script>
}
@Render.Paging(Model.NumberOfPages)
<div class="Section">
<ul id="Threads">
    @foreach (var answer in Model.Set)
    {
        <li><a data-id="@answer.QuestionId ">@Html.Raw(answer.QuestionTitle)</a></li>
    }
</ul>    
</div>

<div id="Tacks">
    
</div>
