<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/BlueprintReset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <form method="post" action="@ViewBag.Submit">
    <div style="display:table; width:100%;">
    <div class="Left">
        <div class="Min-Height">
        @RenderBody()
        </div>
    </div>
    <div class="Right">
        @RenderSection("Right", false)
        <br />
        <br />
        <div class="Admin-Title">Control Panel</div>
        <ul class="Control-Panel">
            <li><a href="@Url.Action("Create","Blog")">New Post</a></li>
            <li><a href="@Url.Action("Lock","Unlocker")">Sign Out</a></li>
            <li><a href="http://zasz.me/">Zasz.ME</a></li>
        </ul>
    </div>
    <div class="Clear" />
    </div>
    </form>
</body>
</html>
